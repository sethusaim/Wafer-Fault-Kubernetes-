[Unit]
Description=MLflow tracking server
After=network.target

[Service]
Restart=on-failure
RestartSec=30

ExecStart=/bin/bash -c 'PATH=/home/ubuntu/anaconda3/envs/mlflow/bin/:$PATH exec mlflow server --backend-store-uri sqlite:///mlflow.db --default-artifact-root s3://wafer-mlflow-35789c9/ --host 0.0.0.0 -p 8000'

[Install]
WantedBy=multi-user.target